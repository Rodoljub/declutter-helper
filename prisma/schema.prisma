// datasource & generator
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Decision {
  UNDECIDED
  KEEP
  DONATE
  SELL
  TRASH
  MAYBE
}

model DecisionRecord {
  id        Int      @id @default(autoincrement())
  type      Decision
  notes     String?
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId    Int
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  items Item[]
}

model Item {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  name       String
  category   String
  photoUrl   String?
  notes      String?
  decision   Decision?
  decidedAt  DateTime?
  reviewDate DateTime?
  createdAt  DateTime  @default(now())

  decisions DecisionRecord[] 
}
